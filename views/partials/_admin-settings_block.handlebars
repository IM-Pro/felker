<!--  БЛОК НАСТРОЕК -->
<div id="config-block" class="tab-pane fade {{#if (equals adminTab 'config')}}in active{{/if}}">

  <div class="alert alert-info text-center">
    Изменения всех данных, не касающихся товаров: телефон, э-мэйл, главный текст а так же описание, заголовок и ключевые слова
    для СЕО
  </div>

  <form class="form-horizontal" method="POST" action="admin/data/edit/{{info._id}}?_method=PUT">
    <input type="hidden" name="_method" , value="PUT">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title text-center">Основные настройки</div>
      </div>
      <div class="panel-body">
        <div class="col-xs-12">
          <div class="row">
            <div class="col-sm-6">
              <label for="phone" class="control-label">Телефон</label>
              <input type="text" class="form-control" name="phone" value="{{info.phone}}">
            </div>
            <div class="col-sm-6">
              <label for="email" class="control-label">Эл. почта</label>
              <input type="text" class="form-control" name="email" value="{{info.email}}">
            </div>
            <div class="col-xs-12">
              <label for="subtitle" class="control-label">Подзаголовок сайта</label>
              <textarea data-role="text-editor" name="subtitle" rows="3" class="form-control">
                {{info.subtitle}}
              </textarea>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title text-center">SEO настройки</div>
      </div>
      <div class="panel-body">
        <div class="col-xs-12">
          <div class="row">
            <div class="col-sm-5">
              <div class="form-group">
                <label for="meta_title" class="control-label">Заголовок сайта</label>
                <input type="text" class="form-control" name="meta_title" value="{{info.meta.title}}">
              </div>
              <div class="form-group">
                <label for="meta_keywords" class="control-label">Ключевые слова</label>
                <textarea name="meta_keywords" rows="2" class="form-control">
              {{info.meta.keywords}}
            </textarea>
              </div>
            </div>
            <div class="col-sm-6 col-sm-offset-1">
              <div class="form-group">
                <label for="meta_description" class="control-label">Мета описание</label>
                <textarea name="meta_description" rows="6" class="form-control">
              {{info.meta.description}}
            </textarea>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title text-center">Описание продукции - основной текст</div>
      </div>
      <div class="panel-body">
        <textarea data-role="text-editor" name="description" rows="8" class="form-control">
        {{info.description}}
      </textarea>
      </div>
    </div>

    <div class="control-panel text-right">
      <button type="submit" class="btn btn-warning btn-sm" data-action="save-main-data">
        <i class="glyphicon glyphicon-floppy-disk"></i> Сохранить изменения
      </button>
    </div>
  </form>

</div>