<div class="container">

  <table class="table-striped table-bordered mb-20">
    <thead>
      <tr>
        <th>id</th>
        <th>category</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each categories}}
        <tr>
          <td>{{id}}</td>
          <td>{{name}}</td>
          <td>
            <form action="/test/delete/{{id}}?_method=DELETE" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger btn-sm"><i class="glyphicon glyphicon-trash"></i> удалить</button>
            </form>
          </td>
        </tr>

      {{else}}
        <div class="alert alert-warning text-center">
          <p>Категории не добавлены</p>
        </div>

      {{/each}}
    </tbody>
  </table>

  <div class="well" style="padding: 30px 70px; border-radius: 3px; margin-top: 30px;">
    <h3>Тестовое добавление категории</h3>
      <form action="/test" method="POST" class="form-horizontal">
        <div class="form-group">
          <label for="name" class="control-label">имя категории</label>
          <input type="text" class="form-control" name="name" id="name">
        </div>
        <div class="form-group">
          <button class="btn btn-primary pull-right" type="submit">Отправить</button>
        </div>
      </form>
  </div>
</div>